<header><h1><center>Discover New Movies</center></h1><header>
<div class="search_block">
  <p>
    <center>
      <%= button_to "Find Top Rated Movies", movies_path, method: :get, params: [search: "Top Rated"] %> <br>
      or <br><br>
      <%= form_with url: movies_path, method: :get, local: true do |form| %>
        <%= form.text_field :search %>
        <%= form.submit "Search" %>
      <% end %>
    </center>
  </p>
</div>
